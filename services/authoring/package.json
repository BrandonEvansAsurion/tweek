{
  "name": "tweek-authoring-api",
  "version": "1.0.0",
  "main": "src/server.js",
  "repository": "https://github.com/Soluto/tweek",
  "author": "Soluto",
  "license": "MIT",
  "engines": {
    "node": ">=8.1.3"
  },
  "scripts": {
    "test": "mocha",
    "start": "node ./src/server.js",
    "docker-compose": "docker-compose -f ../../deployments/dev/docker-compose.yml -f ../../deployments/dev/docker-compose.override.yml",
    "format": "prettier-eslint --trailing-comma all --print-width 100 --single-quote --write",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "gitDir": "../../",
    "linters": {
      "**/authoring/**/*.js": [
        "npm run format",
        "git add"
      ]
    }
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "morgan": "^1.8.2",
    "nconf": "^0.8.4",
    "nodegit": "^0.18.3"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "eslint": "^4.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.2",
    "mocha": "^3.4.2",
    "prettier-eslint-cli": "^4.1.1"
  }
}
